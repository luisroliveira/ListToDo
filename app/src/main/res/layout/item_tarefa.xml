<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/item_lista_borda"
    android:layout_marginTop="10dp">

    <CheckBox
        android:id="@+id/checkboxTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/textTituloTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da tarefa"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDataTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data da tarefa"
            android:textSize="14sp"
            android:textColor="#888888" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ic_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_auto_delete"
        android:layout_marginEnd="8dp"

        />

</LinearLayout>


